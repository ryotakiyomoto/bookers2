<div class="col-md-8 offset-md-1">
<h2 class='mt-3'>Users</h2>
<table class="table table-hover table-inverse">
  <thead>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user do %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/assets/no_image.jpg", class: 'attachment user profile_image fallback', size: "40x40" %>
        <% end %>
        <div>
          <%= image_tag 'no_image.jpg' %>
        </div>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user, class: "show_#{user.id}" %></td>
    </th>
    <% end %>
  </tbody>
</table>
