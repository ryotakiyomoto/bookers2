<div class="col-md-8 offset-md-1">
  <h2 class='mt-3'>Book detail</h2>
  <table class="table table-hover table-inverse">
    <tbody>
      <td>
        <%= link_to @book.user do %>
        <div class='img-store'>
          <%= image_tag 'no_image.jpg' %>
        </div>
          <%= 
          # attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/assets/no_image.jpg", class: 'attachment user profile_image fallback', size: "40x40"  
          %>
          <%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, @book %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success edit_#{@book.id}" %></td>
        <td><%= link_to 'Destroy', book_path, method: :delete, class: "btn btn-sm btn-danger destroy_#{@book.id}" %></td>
      <% end %>
    </tbody>
  </table>
</div>